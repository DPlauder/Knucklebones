<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dice_row_player_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="1"
    android:rowCount="4"
    android:layout_gravity="center_horizontal"
    android:padding="8dp"
    android:clickable="true"

    >

    <!-- Total Points (centered horizontally) -->
    <TextView
        android:id="@+id/total_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_points_default_value"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"/>

    <!-- Dice Image 1  -->
    <ImageView
        android:id="@+id/dice_image_1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/empty_dice"
        android:background="@drawable/dice_border"
        android:layout_gravity="center_horizontal"
    />

    <!-- Dice Image 2  -->
    <ImageView
        android:id="@+id/dice_image_2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/empty_dice"
        android:background="@drawable/dice_border"
        android:layout_gravity="center_horizontal"

    />

    <!-- Dice Image 3  -->
    <ImageView
        android:id="@+id/dice_image_3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/empty_dice"
        android:background="@drawable/dice_border"
        android:layout_gravity="center_horizontal"
    />

</GridLayout>


