<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background for the dice (could be a color or transparent) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color inside the border -->
            <corners android:radius="4dp" /> <!-- Slightly rounded corners -->
        </shape>
    </item>

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#000000" /> <!-- Border thickness and color -->
            <corners android:radius="4dp" /> <!-- Match the rounded corners -->
        </shape>
    </item>
</layer-list>