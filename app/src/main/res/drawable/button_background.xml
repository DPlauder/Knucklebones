<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/button_pressed_background" /> <!-- Darker shade when pressed -->
            <stroke android:width="2dp" android:color="@color/highlight_glow" /> <!-- Gold border -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="@color/button_background" /> <!-- Default background color -->
            <stroke android:width="2dp" android:color="@color/highlight_glow" /> <!-- Gold border -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>